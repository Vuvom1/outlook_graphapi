# PostgreSQL Database Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=outlook_api
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password

# Azure Application Registration Credentials
# You need to create an Azure App Registration and update these values
AZURE_CLIENT_ID=your-client-id-here
AZURE_CLIENT_SECRET=your-client-secret-here
AZURE_TENANT_ID=common

# OAuth Redirect URI (should match what you configured in Azure)
REDIRECT_URI=https://localhost:8000/client/callback

# Optional: Database URL (alternative to individual settings)
# DATABASE_URL=postgresql://postgres:password@localhost:5432/outlook_api
